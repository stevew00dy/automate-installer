{
  "name": "automate-installer",
  "version": "1.0.0",
  "description": "One-click installer for AutoMate AI Automation Hub",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "automate",
    "ai",
    "automation",
    "installer",
    "electron"
  ],
  "author": "Steve Woody",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "dockerode": "^4.0.0",
    "execa": "^5.1.1",
    "joi": "^17.11.0",
    "listr2": "^8.0.0",
    "node-fetch": "^2.7.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "appdmg": "^0.6.6",
    "create-dmg": "^7.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.automate.installer",
    "productName": "AutoMate Installer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "scripts/**/*",
      "assets/**/*",
      "package.json"
    ]
  }
}
